<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<% if flash[:error] %>
  <div class="error"><%= flash[:error] %></div>
<% end %>
<h1>Login</h1>
<%= form_tag(logins_path, :method => "post") do %>
  <div class="field">
    <%= label_tag :username %> <br />
    <%= text_field_tag :username %>
  </div>
  <div class="field">
    <%= label_tag :password %> <br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag("Login") %>
  </div>
<% end %>

